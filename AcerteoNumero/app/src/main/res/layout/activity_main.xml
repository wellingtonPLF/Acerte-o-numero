<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center"
        android:layout_weight="1.2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gere um numero e começe o jogo!">
        </TextView>

    </LinearLayout>

    <FrameLayout
        android:layout_weight="1.3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btStart"
            android:visibility="visible"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gerar Numero">

        </Button>
        <TextView
            android:id="@+id/tvTitle"
            android:layout_gravity="center_horizontal"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="~ Agora adivinhe o respectivo numero:"
            android:textColor="@android:color/black">
        </TextView>
    </FrameLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:paddingLeft="10sp"
            android:id="@+id/tvDivisores"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Seus Divisores: "
            android:textColor="@android:color/black">
        </TextView>
        <TextView
            android:paddingLeft="10sp"
            android:id="@+id/tvImparOuPar"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="O numero é "
            android:textColor="@android:color/black">
        </TextView>
        <TextView
            android:paddingLeft="10sp"
            android:id="@+id/tvQtdDivisores"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Quantidade de divisores desse número: "
            android:textColor="@android:color/black">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/etResposta"
            android:gravity="bottom"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Put the Number Here">
        </EditText>

        <Button
            android:id="@+id/btResponder"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Responder"
            android:background="@android:color/holo_green_light">
        </Button>
    </LinearLayout>
</LinearLayout>